<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    
    <!-- Bootstrap CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
        crossorigin="anonymous"
    />

    <!-- style -->
    <link rel="stylesheet" href="css/style.css">

    <!-- Font Awesome -->
    <link 
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"
    />

</head>
<body>
    <div class="app">
        <div class="container-sm">

            <!-- input area -->
            <div class="row pt-5">
                <div class="col p-0">
                    <form action="/" method="post" class="search-bar bg-black bg-opacity-75">
                        <input name="city" type="text" class="city-input" placeholder="City..." maxlength="40" required>
                        <button type="submit" class="submit-btn">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>
                </div>
            </div>

            <!-- main card -->
            <div class="row pt-3">
                <div class="col p-0">
                    <div class="main-card bg-black bg-opacity-75">
                        <div class="row">
                            <div class="col">
                                <% if (weather !== null) { %>
                                    <img src="<%= icon %>" class="icon" alt="weather-icon">
                                <% } %>
                                <div class="city"><%= place %></div>
                            </div>
                        </div>

                        <% if (weather !== null) { %>
                        <div class="row">
                            <div class="col-8">
                                <div class="description"><%= description %></div>
                            </div>
                            <div class="col">
                                <div class="date" id="date"></div>
                            </div>
                        </div>
                        <% } %>
                        
                    </div>
                </div>
            </div>


            <!-- conditions cards - don't render if weather == null -->
            <% if (weather !== null) { %>

            <!-- 1st row -->
            <div class="row pt-3">
                <div class="col p-0">
                    <div class="small-card big-temp bg-black bg-opacity-75">
                        <h6>actual temp</h6>
                        <i class="fa-solid fa-temperature-half"></i> <%= temp %>&#8451;
                    </div>
                </div>
                <div class="col p-0">
                    <div class="small-card big-temp bg-black bg-opacity-75">
                        <h6>sensed temp</h6>
                        <i class="fa-solid fa-temperature-half"></i> <%= sensed %>&#8451;
                    </div>
                </div>
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>min / max temp</h6>
                        <%= min %>&#8451; / <%= max %>&#8451;
                    </div>
                </div>
            </div>

            <!-- 2nd row -->
            <div class="row pt-3">
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>sunrise</h6>
                        <i class="fa-solid fa-sun"></i> <%= sunrise %>
                    </div>
                </div>
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>sunset</h6>
                        <i class="fa-solid fa-moon"></i> <%= sunset %>
                    </div>
                </div>
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>wind speed</h6>
                        <i class="fa-solid fa-wind"></i> <%= wind %> m/s
                    </div>
                </div>
            </div>

            <!-- 3rd row -->
            <div class="row pt-3">
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>cloudiness</h6>
                        <i class="fa-solid fa-cloud"></i> <%= cloudiness %> %
                    </div>
                </div>
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>pressure</h6>
                        <i class="fa-solid fa-gauge-simple"></i> <%= pressure %> hPa
                    </div>
                </div>
                <div class="col p-0">
                    <div class="small-card bg-black bg-opacity-75">
                        <h6>humidity</h6>
                        <i class="fa-solid fa-water"></i> <%= humidity %> %
                    </div>
                </div>
            </div>

            <% } %>

        </div>
    </div>

    <!-- get date -->
    <script>
        const today = new Date();
        const date = today.getDate()+'-'+(today.getMonth()+1)+'-'+today.getFullYear();
        document.getElementById('date').innerHTML = date;
    </script>
</body>
</html>